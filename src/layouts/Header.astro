---
export interface Props {
    icon: string;
    site: string;
}

const { icon, site } = Astro.props as Props;
---

<div
    class="flex sm:flex-row flex-col w-full dark:bg-backgroundColor-dark-2 bg-backgroundColor-light-2 p-4 justify-between items-center gap-2"
    id="header"
>
    <a
        class="w-fit flex place-items-center gap-2"
        href="/"
    >
        <img
            alt="Icon"
            class="sm:h-10 sm:w-10 h-8 w-8 select-none"
            src={icon}
        />
        <span class="sm:text-2xl text-xl font-bold mb-1 truncate">{site}</span>
    </a>
    <nav class="flex flex-row justify-around w-full sm:w-fit sm:gap-8 sm:px-4 group">
        <slot />
    </nav>
</div>
