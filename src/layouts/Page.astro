---
import Base from './Base.astro';
import Link from '../components/Link.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
    title?: string;
}

const { title } = Astro.props as Props;

const description = '';
const icon = '/icon.webp';
const site = 'FrontendForGPT';
const titleMeta = title ? `${title} - ${site}` : site;
---

<Base
    description={description}
    icon={icon}
    titleMeta={titleMeta}
>
    <script>
        import '../scripts/anchors.js';
    </script>
    <Header
        icon={icon}
        site={site}
    >
        <Link
            href="https://github.com/frontend4gpt"
            label="GitHub"
        />
    </Header>
    <div class="flex justify-center flex-grow shrink">
        <main class="flex flex-col max-w-[80rem] w-[80rem] p-4 gap-4">
            <slot />
        </main>
    </div>
    <Footer
        author="Attituding"
        authorHref=""
        icon={icon}
    ></Footer>
</Base>
