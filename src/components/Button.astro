---
export interface Props {
    description?: string;
    href: string;
    icon?: string;
    iconAlt?: string;
    maxWidth?: string;
    target?: '_blank' | '_parent' | '_self' | '_top';
    title: string;
}

const { description, href, icon, iconAlt, maxWidth, title, target } = Astro.props as Props;
---

<a
    class={`transition-all ${
        maxWidth ?? ''
    } w-full flex flex-col rounded-3xl hover:rounded-2xl group p-6 gap-2 bg-light-2 dark:bg-backgroundColor-dark-2 hover:bg-light-3 hover:dark:bg-backgroundColor-dark-3`}
    href={href}
    target={target ?? '_blank'}
>
    <div class="flex justify-between items-center">
        <span class={`${description ? 'h4' : 'h3'} font-semibold flex-wrap`}>{title}</span>
        <img
            alt={iconAlt ??
                'Icon that describes that the surrounding container is a a clickable anchor'}
            class="h-6 w-6 select-none"
            src={icon ?? '/link-external.svg'}
        />
    </div>
    {description && <span class="text-light-2 dark:text-dark-2 h6">{description}</span>}
</a>
