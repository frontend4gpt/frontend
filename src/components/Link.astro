---
export interface Props {
    href: string;
    label: string;
    target?: string;
}

const { href, label, target } = Astro.props as Props;
---

<a
    class="flex"
    href={href}
    target={target ?? '_blank'}
>
    <span
        class="transition-colors sm:text-lg text-base font-semibold sm:group-hover:text-textColor-light-3 sm:dark:group-hover:text-textColor-dark-3 text-textColor-light-1 dark:text-textColor-dark-1 hover:hover:hover:text-textColor-light-1 hover:hover:hover:dark:text-textColor-dark-1"
        >{label}</span
    >
</a>
